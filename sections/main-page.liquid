{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ENHANCED STICKY NAVIGATION STYLES */
  .sticky-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    transform: translateY(-100%);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.08);
  }

  .sticky-nav.visible {
    transform: translateY(0);
  }

  .sticky-nav.scrolled {
    background: rgba(255, 255, 255, 0.96);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
  }

  .sticky-nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  .sticky-nav-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.3s ease;
    z-index: 10;
  }

  .sticky-nav-logo:hover {
    color: #007bff;
  }

  .sticky-nav-menu {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .sticky-nav-menu li {
    position: relative;
  }

  .sticky-nav-menu a {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
    position: relative;
  }

  .sticky-nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #007bff;
    transition: width 0.3s ease;
  }

  .sticky-nav-menu a:hover {
    color: #007bff;
  }

  .sticky-nav-menu a:hover::after {
    width: 100%;
  }

  .sticky-nav-cta {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
    padding: 0.75rem 1.75rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
    border: none;
    cursor: pointer;
  }

  .sticky-nav-cta:hover {
    background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
  }

  /* Enhanced Mobile hamburger menu */
  .sticky-nav-mobile-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #333;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 4px;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .sticky-nav-mobile-toggle:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .sticky-nav-mobile-toggle.active {
    color: #007bff;
  }

  .sticky-nav-menu.mobile-open {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    flex-direction: column;
    padding: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    gap: 1.5rem;
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .sticky-nav-menu.mobile-open a {
    font-size: 1.1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .sticky-nav-menu.mobile-open a:last-child {
    border-bottom: none;
  }

  /* Scroll progress indicator */
  .scroll-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, #007bff, #00d4ff);
    transition: width 0.1s ease;
    border-radius: 0 2px 2px 0;
  }

  /* Mobile responsive improvements */
  @media screen and (max-width: 768px) {
    .sticky-nav-content {
      padding: 0.75rem 1rem;
    }
    
    .sticky-nav-menu {
      display: none;
    }
    
    .sticky-nav-menu.mobile-open {
      display: flex;
    }
    
    .sticky-nav-mobile-toggle {
      display: block;
    }
    
    .sticky-nav-logo {
      font-size: 1.25rem;
    }
    
    .sticky-nav-cta {
      padding: 0.6rem 1.2rem;
      font-size: 0.85rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .sticky-nav {
      background: rgba(20, 20, 20, 0.92);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sticky-nav.scrolled {
      background: rgba(20, 20, 20, 0.96);
    }

    .sticky-nav-logo,
    .sticky-nav-menu a,
    .sticky-nav-mobile-toggle {
      color: #fff;
    }

    .sticky-nav-menu.mobile-open {
      background: rgba(20, 20, 20, 0.98);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
  }

