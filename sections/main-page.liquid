{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* STICKY NAVIGATION STYLES */
  .sticky-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    transform: translateY(-100%);
    transition: all 0.3s ease-in-out;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .sticky-nav.visible {
    transform: translateY(0);
  }

  .sticky-nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sticky-nav-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #222;
    text-decoration: none;
  }

  .sticky-nav-menu {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sticky-nav-menu a {
    color: #444;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .sticky-nav-menu a:hover {
    color: #007bff;
  }

  .sticky-nav-cta {
    background: #007bff;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
  }

  .sticky-nav-cta:hover {
    background: #0056b3;
    color: white;
  }

  /* Mobile hamburger menu */
  .sticky-nav-mobile-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #444;
    cursor: pointer;
  }

  .sticky-nav-menu.mobile-open {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    flex-direction: column;
    padding: 1rem 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media screen and (max-width: 768px) {
    .sticky-nav-content {
      padding: 0.75rem 1rem;
    }
    
    .sticky-nav-menu {
      display: none;
    }
    
    .sticky-nav-menu.mobile-open {
      display: flex;
    }
    
    .sticky-nav-mobile-toggle {
      display: block;
    }
    
    .sticky-nav-logo {
      font-size: 1.25rem;
    }
    
    .sticky-nav-cta {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }

  /* TRUE Full-width container styles - No side margins */
  .main-page-full-width {
    width: 100vw !important;
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw !important;
    margin-right: -50vw !important;
  }

  .main-page-content {
    width: 100% !important;
    max-width: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  .rte.full-width {
    width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  /* Override ALL Shopify container constraints */
  .main-page-full-width .page-width,
  .main-page-full-width .page-width--narrow,
  .main-page-full-width .container,
  .main-page-full-width .section-padding {
    width: 100% !important;
    max-width: none !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  /* Ensure content inside takes full width */
  .main-page-full-width * {
    max-width: none !important;
  }

  /* Navigation pills full width styling */
  .main-page-full-width .nav-pills {
    width: 100%;
    padding: 0 2rem;
    justify-content: center;
    gap: 2rem;
  }

  .main-page-full-width .nav-pill {
    padding: 1rem 2rem;
    min-width: 150px;
    font-size: 1rem;
  }

  /* Services grid full width */
  .main-page-full-width .services-grid {
    width: 100%;
    max-width: none !important;
    padding: 0 2rem;
    gap: 3.5rem;
  }

  /* Hero section full width */
  .main-page-full-width .hero {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .main-page-full-width .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Timing and CTA sections full width */
  .main-page-full-width .timing-section,
  .main-page-full-width .cta-section {
    width: 100%;
    margin: 0;
    padding-left: 0;
    padding-right: 0;
  }

  @media screen and (max-width: 749px) {
    .main-page-full-width .nav-pills {
      padding: 0 1rem;
      gap: 1rem;
    }
    
    .main-page-full-width .services-grid {
      padding: 0 1rem;
    }
    
    .main-page-full-width .hero-content {
      padding: 0 1rem;
    }
  }

  .service-card {
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 2px 16px rgba(0,0,0,0.07);
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: box-shadow 0.2s;
  }

  .service-card:hover {
    box-shadow: 0 6px 32px rgba(0,0,0,0.13);
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #222;
  }

  .service-card ul {
    padding-left: 1.2rem;
    margin: 0;
    color: #444;
    font-size: 1rem;
    line-height: 1.7;
  }

  .service-card li {
    margin-bottom: 0.7rem;
  }
{%- endstyle -%}

