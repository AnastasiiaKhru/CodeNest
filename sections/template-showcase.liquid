        <button class="filter-tab active" data-filter="all">All Templates</button>
        <button class="filter-tab" data-filter="video">Video Templates</button>
        <button class="filter-tab" data-filter="social">Social Media</button>
        <button class="filter-tab" data-filter="event">Events</button>
        <button class="filter-tab" data-filter="food">Food & Dining</button>
        <button class="filter-tab" data-filter="fashion">Fashion</button>
        <button class="filter-tab" data-filter="travel">Travel</button>
        <button class="filter-tab" data-filter="business">Business</button>
        <button class="filter-tab" data-filter="realestate">Real Estate</button>
        <button class="filter-tab" data-filter="technology">Technology</button>
        <button class="filter-tab" data-filter="beauty">Beauty & Salon</button>
      </div>
    </div>

    <!-- Templates Grid -->
    <div class="templates-grid" id="templatesGrid">
      <!-- ... (all 15 template cards go here, as provided above) ... -->
    </div>

    <!-- CTA Section -->
    <div class="cta-section">
      <h3 class="cta-title">Ready to Elevate Your Brand?</h3>
      <p class="cta-description">
        These premium templates are just the beginning. As our client, you'll receive unlimited access to our growing template library, 
        plus custom design services tailored to your brand's unique needs.
      </p>
      <div class="cta-buttons">
        <a href="/contact" class="cta-btn btn-primary">Become a Client</a>
        <a href="/services" class="cta-btn btn-secondary">View Our Services</a>
      </div>
    </div>
  </div>
