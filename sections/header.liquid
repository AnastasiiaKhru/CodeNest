<style>
  /* FORCE LARGE NAVIGATION BAR ON ALL PAGES - NO LOGO */
  
  .header-wrapper {
    padding: 0 !important;
    min-height: 120px !important; /* Force large height */
    height: auto !important;
    position: sticky !important;
    top: 0 !important;
    z-index: 101 !important;
    transform: none !important;
    transition: none !important;
  }
  
  .header {
    padding: 24px 3rem !important; /* Large padding for single line */
    min-height: 120px !important; /* Match wrapper height */
    height: auto !important;
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    flex-wrap: nowrap !important; /* Keep single line */
    transform: none !important;
    transition: none !important;
  }
  
  @media screen and (min-width: 990px) {
    .header-wrapper {
      min-height: 140px !important; /* Even larger on desktop */
    }
    
    .header {
      padding: 32px 3rem !important; /* More padding on desktop */
      min-height: 140px !important;
    }
  }
  
  /* HIDE LOGO COMPLETELY */
  .header__heading-link,
  .header__heading-logo-wrapper,
  .header__heading-logo {
    display: none !important;
    visibility: hidden !important;
    width: 0 !important;
    height: 0 !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  /* ADJUST LAYOUT WITHOUT LOGO - CENTER MENU, RIGHT ALIGN ICONS */
  .header {
    display: grid !important;
    grid-template-columns: 1fr auto !important;
    grid-template-areas: "menu icons" !important;
    gap: 2rem !important;
  }
  
  .header__inline-menu {
    grid-area: menu !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    margin: 0 !important;
  }
  
  .header__icons {
    grid-area: icons !important;
    display: flex !important;
    align-items: center !important;
    gap: 1.5rem !important;
    justify-self: end !important;
  }
  
  /* FORCE MENU TO STAY LARGE AND SINGLE LINE */
  .list-menu--inline {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    flex-wrap: nowrap !important; /* Keep single line */
    gap: 2rem !important; /* Space between menu items */
  }
  
  .list-menu__item {
    display: flex !important;
    align-items: center !important;
    white-space: nowrap !important; /* Prevent text wrapping */
  }
  
  .list-menu__item--link {
    padding: 1rem 1.5rem !important; /* Large clickable area */
    font-size: 1.1rem !important; /* Larger text */
    line-height: 1.4 !important;
    text-decoration: none !important;
    transform: none !important;
    transition: color 0.3s ease !important;
    white-space: nowrap !important;
  }
  
  /* FORCE ICONS SECTION TO STAY LARGE */
  .header__icon {
    width: 2.4rem !important;
    height: 2.4rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }
  
  /* DISABLE ALL STICKY HEADER SIZE CHANGES */
  .scrolled-past-header .header-wrapper,
  .scrolled-past-header .header,
  .shopify-section-header-sticky .header-wrapper,
  .shopify-section-header-sticky .header,
  .header-wrapper.scrolled-past-header,
  .header.scrolled-past-header {
    padding: 24px 3rem !important;
    min-height: 120px !important;
    height: auto !important;
    transform: none !important;
    transition: none !important;
  }
  
  @media screen and (min-width: 990px) {
    .scrolled-past-header .header-wrapper,
    .scrolled-past-header .header,
    .shopify-section-header-sticky .header-wrapper,
    .shopify-section-header-sticky .header,
    .header-wrapper.scrolled-past-header,
    .header.scrolled-past-header {
      padding: 32px 3rem !important;
      min-height: 140px !important;
    }
  }
  
  /* MOBILE RESPONSIVE - KEEP LARGE BUT ADJUST FOR MOBILE */
  @media screen and (max-width: 989px) {
    .header {
      padding: 20px 1.5rem !important;
      min-height: 100px !important;
      grid-template-columns: 1fr auto !important;
      gap: 1rem !important;
    }
    
    .header-wrapper {
      min-height: 100px !important;
    }
    
    .list-menu--inline {
      gap: 1rem !important;
    }
    
    .list-menu__item--link {
      padding: 0.8rem 1rem !important;
      font-size: 1rem !important;
    }
    
    .header__icons {
      gap: 1rem !important;
    }
    
    .header__icon {
      width: 2rem !important;
      height: 2rem !important;
    }
  }
  
  /* ENSURE PROPER LAYOUT */
  .page-width {
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }
  
  /* Standard menu drawer for mobile */
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }
  
  {%- if section.settings.menu_type_desktop != "drawer" -%}
    @media screen and (min-width: 990px) {
      header-drawer {
        display: none;
      }
    }
  {%- endif -%}
  
  .menu-drawer-container {
    display: flex;
  }
  
  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  summary.list-menu__item {
    padding-right: 2.7rem;
  }
</style>

