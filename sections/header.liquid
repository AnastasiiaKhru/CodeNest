    color_scheme: section.settings.color_scheme,
    desktop_menu_type: section.settings.menu_type_desktop
  -%}
{%- endif -%}

<!-- DISABLE ALL JAVASCRIPT THAT COULD AFFECT HEADER -->
<script>
  // Disable any existing sticky header functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Remove any sticky header classes that might be added by other scripts
    const header = document.querySelector('.section-header');
    const headerWrapper = document.querySelector('.header-wrapper');
    
    if (header) {
      header.classList.remove('shopify-section-header-sticky', 'shopify-section-header-hidden', 'scrolled-past-header', 'animate');
      header.style.position = 'relative';
      header.style.transform = 'none';
      header.style.transition = 'none';
    }
    
    if (headerWrapper) {
      headerWrapper.classList.remove('shopify-section-header-sticky', 'shopify-section-header-hidden', 'scrolled-past-header', 'animate');
      headerWrapper.style.position = 'relative';
      headerWrapper.style.transform = 'none';
      headerWrapper.style.transition = 'none';
    }
    
    // Disable scroll listeners that might affect header
    window.removeEventListener('scroll', function() {});
  });
  
  // Override any custom elements that might affect header
  if (customElements.get('sticky-header')) {
    customElements.define('sticky-header-disabled', class extends HTMLElement {
      connectedCallback() {
        // Do nothing - disable sticky functionality
      }
    });
  }
</script>

