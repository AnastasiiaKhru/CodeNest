  }
  
  .price-showcase {
    flex-direction: column;
    gap: 20px;
  }
  
  .hero-cta {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    width: 100%;
    max-width: 300px;
    justify-content: center;
  }
  
  .trust-indicators {
    flex-direction: column;
    gap: 20px;
  }
}
</style>

