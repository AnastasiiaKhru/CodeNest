@media (max-width: 768px) {
  .ecommerce-package-features {
    padding: 80px 0;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .feature-item {
    padding: 24px;
  }
}
</style>

